<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.stuff.bizzy.MapScreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:id="@+id/listToggle"
            android:background="@android:drawable/ic_menu_sort_by_size"
            android:onClick="switchToListView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Display Buildings"
            android:layout_marginTop="10dp"
            android:onClick="toggleBuildingBorders"
            android:id="@+id/buildingToggle" />



    </fragment>



    <RelativeLayout
        android:id="@+id/joinPanel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/map"
        android:background="#CC808080"
        android:visibility="visible">


        <Button
            android:text="Join this group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinGroup"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:onClick="onJoinGroupClick" />

        <Button
            android:text="Create Group at Current Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createGroup"
            android:layout_centerInParent="true"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/listToolbar"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:id="@+id/mapToggle"
                android:background="@android:drawable/ic_menu_mapmode"
                android:onClick="switchToMapButton" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/searchPanel"
               android:orientation="horizontal"
                >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="Search Filter: "
                   android:textAlignment="center" />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/searchBar"
                   android:inputType="text"
                   android:maxLines="1" />

           </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sortPanel"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:text="Sort groups by:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/sortingSpinner"
                android:layout_weight="1" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_below="@+id/listToolbar"
            android:layout_above="@+id/sortPanel"
            android:focusableInTouchMode="true">
        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>

</RelativeLayout>

